<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/griditem_image"
        android:layout_width="140dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/griditem_tag"
        android:textSize="15sp"
        android:layout_alignEnd="@id/griditem_image"
        android:layout_alignStart="@id/griditem_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/title_text_color"
        android:background="@color/title_background_color"
        android:layout_alignParentBottom="true"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/prog_bar"
        style="@android:style/Widget.Material.Light.ProgressBar.Small.Inverse"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"/>

</RelativeLayout>